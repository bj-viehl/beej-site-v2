<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Header Options"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">
                    <logo
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Logo"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <logoPrimary
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    allowUpload="{Boolean}false"
                                                    autoStart="{Boolean}false"
                                                    class="cq-droptarget"
                                                    fieldLabel="Header Logo"
                                                    fieldDescription="Drop a logo from the DAM here"
                                                    fileNameParameter="./primaryLogo"
                                                    fileReferenceParameter="./headerLogo"
                                                    mimeTypes="[image]"
                                                    multiple="{Boolean}false"
                                                    name="./file"
                                                    title="Primary Logo Upload"
                                                    useHTML5="{Boolean}true"/>
                                            <logoPrimaryURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                    fieldLabel="Logo URL"
                                                    name="./logoURL"
                                                    rootPath="/content"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </logo>
                    <icon
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Menu Button"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <menuIcon
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    allowUpload="{Boolean}false"
                                                    autoStart="{Boolean}false"
                                                    class="cq-droptarget"
                                                    fieldLabel="Menu Button Icon"
                                                    fieldDescription="Drop an svg icon from the DAM here"
                                                    fileNameParameter="./primaryMenuIcon"
                                                    fileReferenceParameter="./menuIcon"
                                                    mimeTypes="[image]"
                                                    multiple="{Boolean}false"
                                                    name="./file"
                                                    title="Primary Logo Upload"
                                                    useHTML5="{Boolean}true"/>
                                            <closeIcon
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    allowUpload="{Boolean}false"
                                                    autoStart="{Boolean}false"
                                                    class="cq-droptarget"
                                                    fieldLabel="Menu Button Icon"
                                                    fieldDescription="Drop an svg icon from the DAM here"
                                                    fileNameParameter="./primaryCloseIcon"
                                                    fileReferenceParameter="./closeIcon"
                                                    mimeTypes="[image]"
                                                    multiple="{Boolean}false"
                                                    name="./file"
                                                    title="Primary Logo Upload"
                                                    useHTML5="{Boolean}true"/>

                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </icon>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>