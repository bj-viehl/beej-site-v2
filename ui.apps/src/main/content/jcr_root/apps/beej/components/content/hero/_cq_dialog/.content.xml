<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Hero Options"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">
                    <heroBackground
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Background"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <backgroundImage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    allowUpload="{Boolean}false"
                                                    autoStart="{Boolean}false"
                                                    class="cq-droptarget"
                                                    fieldLabel="Background Image"
                                                    fieldDescription="Drop a logo from the DAM here"
                                                    fileNameParameter="./primaryLogo"
                                                    fileReferenceParameter="./heroBackgroundImage"
                                                    mimeTypes="[image]"
                                                    multiple="{Boolean}false"
                                                    name="./file"
                                                    title="Primary Logo Upload"
                                                    useHTML5="{Boolean}true"/>
                                            <backgroundColor
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Hero Background color"
                                                    name="./heroBackgroundColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <none
                                                            jcr:primaryType="nt:unstructured"
                                                            text="No Background Color (Default)"
                                                            value=""/>
                                                    <gradient
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Grey"
                                                            value="beej-hero__gradient"/>
                                                    <pink
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Pink"
                                                            value="beej-hero__pink"/>
                                                    <blue
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blue"
                                                            value="beej-hero__blue"/>
                                                    <grey
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Grey"
                                                            value="beej-hero__grey"/>

                                                </items>
                                            </backgroundColor>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </heroBackground>
                    <heroContent
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Hero Content"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heroTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Hero Title"
                                                    name="./heroTitle"/>
                                            <heroText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldLabel="Hero Text"
                                                    name="./heroText"/>
                                            <ctaText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/texfield"
                                                    fieldLabel="CTA Text"
                                                    name="./heroCTAText"/>
                                            <ctaURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                    fieldLabel="CTA Path"
                                                    name="./heroCTAPath"
                                                    rootPath="/content"/>
                                            <alignment
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Content Alignment"
                                                    name="./heroBackgroundColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <left
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Left Align (Default)"
                                                            value=""/>
                                                    <center
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Center Align"
                                                            value="beej-hero__container--center-align"/>
                                                    <right
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Right Align"
                                                            value="beej-hero__container--right-align"/>
                                                </items>
                                            </alignment>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </heroContent>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>